  <mj-body width="800px" background-color="#d7e1e9">
    <mj-wrapper css-class="wrapper" padding="40px 0">
      <!-- START of View In Browser -->
      <mj-section>
        <mj-group>
          <mj-column
            width="100%"
            background-color="#343c3f"
            padding="15px 20px"
          >
            <mj-button
              href="#"
              css-class="btn-text-hover"
              align="center"
              background-color="transparent"
              inner-padding="0"
              color="#ffffff"
              font-size="13px"
            >
              Click here to view this email in your browser
            </mj-button>
          </mj-column>
        </mj-group>
      </mj-section>
      <!-- END of View In Browser -->

      <!-- START of Brand -->
      <mj-section background-color="#ffffff">
        <mj-group>
          <mj-column width="100%">
            <mj-text>
              <a
                href="https://www.axa.com.sg/"
                target="_blank"
                rel="noopener noreferrer nofollow"
                class="btn-block"
              >
                <img
                  src="images/logo-axa-redefining-insurance.png"
                  class="brand-img"
                />
              </a>
            </mj-text>
          </mj-column>
        </mj-group>
      </mj-section>
      <!-- END of Brand -->

      <!-- START of Hero Image 1 -->
      <mj-section>
        <mj-group>
          <mj-column width="100%">
            <mj-image
              src="images/banner-axa-smart-home.png"
              alt="laughing mom holding baby at the dining table"
            />
          </mj-column>
        </mj-group>
      </mj-section>
      <!-- END of Hero Image 1 -->

      <!-- START of Section 1 -->
      <mj-section background-color="#133483" padding="50px 20px">
        <mj-group>
          <mj-column width="100%">
            <mj-text
              align="center"
              color="#ffffff"
              font-family="Arial"
              font-size="34px"
              font-weight="bold"
            >
              SmartHome
            </mj-text>
            <mj-text
              align="center"
              padding-top="20px"
              color="#ffffff"
              font-size="20px"
              font-weight="bold"
            >
              Your biggest investment requires the best protection.
            </mj-text>
          </mj-column>
        </mj-group>
      </mj-section>
      <!-- END of Section 1 -->

      <!-- START of Section -->
      <mj-section background-color="#ffffff" padding="50px 40px">
        <mj-group>
          <mj-column width="100%">
            <mj-text color="#133483" font-size="27px" font-weight="bold">
              Dear Customer,
            </mj-text>
            <mj-text padding-top="20px" color="#333333" font-size="20px">
              There is nothing more important than a safe and secure home. With
              AXA SmartHome comprehensive protection plan, you can safeguard the
              home you have built for you and your loved ones.
            </mj-text>
            <mj-button
              href="https://www.axa.com.sg/our-solutions/personal/home"
              target="_blank"
              rel="noopener noreferrer nofollow"
              css-class="btn-hover"
              padding-top="30px"
              align="left"
              border-radius="0"
              background-color="#133483"
              inner-padding="10px 50px"
              color="#ffffff"
              font-size="16px"
              font-weight="bold"
              text-transform="uppercase"
            >
              Buy Now
            </mj-button>
          </mj-column>
        </mj-group>
      </mj-section>
      <!-- END of Section 2 -->

      <!-- START of Section 3 -->
      <mj-section
        background-color="#f5f5f5"
        padding="20px 20px 50px"
        direction="rtl"
      >
        <mj-column width="36%" padding="30px 20px 0">
          <mj-image
            align="center"
            src="images/axa-number-one-global-insurance-brand.png"
            alt="AXA #1 global insurance brand for the 8th consecutive year"
            width="228px"
          />
